{
  "name": "soff-cron",
  "version": "0.0.2",
  "description": "Lightweight, tree-shakeable cron expression parser and human-readable formatter",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./core/parser": {
      "import": {
        "types": "./dist/core/parser.d.ts",
        "default": "./dist/core/parser.js"
      },
      "require": {
        "types": "./dist/core/parser.d.cts",
        "default": "./dist/core/parser.cjs"
      }
    },
    "./core/formatter": {
      "import": {
        "types": "./dist/core/formatter.d.ts",
        "default": "./dist/core/formatter.js"
      },
      "require": {
        "types": "./dist/core/formatter.d.cts",
        "default": "./dist/core/formatter.cjs"
      }
    },
    "./core/validator": {
      "import": {
        "types": "./dist/core/validator.d.ts",
        "default": "./dist/core/validator.js"
      },
      "require": {
        "types": "./dist/core/validator.d.cts",
        "default": "./dist/core/validator.cjs"
      }
    },
    "./i18n/es": {
      "import": {
        "types": "./dist/i18n/es.d.ts",
        "default": "./dist/i18n/es.js"
      },
      "require": {
        "types": "./dist/i18n/es.d.cts",
        "default": "./dist/i18n/es.cjs"
      }
    },
    "./i18n/en": {
      "import": {
        "types": "./dist/i18n/en.d.ts",
        "default": "./dist/i18n/en.js"
      },
      "require": {
        "types": "./dist/i18n/en.d.cts",
        "default": "./dist/i18n/en.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "cron",
    "cron-parser",
    "cron-formatter",
    "human-readable",
    "schedule",
    "task-scheduler",
    "crontab",
    "typescript",
    "zero-dependencies",
    "tree-shakeable",
    "latam"
  ],
  "author": "Soff Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bledxs/soff-monorepo.git",
    "directory": "packages/soff-cron"
  },
  "bugs": {
    "url": "https://github.com/bledxs/soff-monorepo/issues"
  },
  "homepage": "https://github.com/bledxs/soff-monorepo/tree/master/packages/soff-cron#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@soff/tsconfig": "*",
    "@types/node": "^25.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  }
}
