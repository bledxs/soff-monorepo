{
  "name": "soff-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "A collection of lightweight, tree-shakeable TypeScript utilities for common business logic in LATAM",
  "keywords": [
    "typescript",
    "utilities",
    "latam",
    "monorepo",
    "tree-shakeable",
    "date",
    "holidays",
    "validation",
    "id",
    "mask",
    "money",
    "currency"
  ],
  "homepage": "https://github.com/bledxs/soff-monorepo#readme",
  "bugs": {
    "url": "https://github.com/bledxs/soff-monorepo/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bledxs/soff-monorepo.git"
  },
  "license": "MIT",
  "author": "Luis C. Rojas <luisc.rojas@hotmail.com>",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rimraf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build --filter='./packages/*' && changeset publish",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "apps/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  },
  "packageManager": "npm@11.7.0",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
